import java.util.Scanner;

public class arm {
    public static int cou(int n) {
        int count = 0;
        while (n > 0) {
            count = count + 1;
            n = n / 10;
        }
        return count;
    }

    public static int power(int base, int exp) {
        int result = 1;
        while (exp > 0) {
            result *= base;
            exp--;
        }
        return result;
    }

    public static boolean armstrong(int n) {
        int k = n;
        int sum = 0;
        int digits = cou(n);
        while (n != 0) {
            int lastdigit = n % 10;
            sum += power(lastdigit, digits);
            n = n / 10;
        }
        return sum == k;
    }

    public static void main(String[] args) {
        int n;
        Scanner obj = new Scanner(System.in);
        n = obj.nextInt();
        System.out.println(armstrong(n));
    }
}
armstrong
